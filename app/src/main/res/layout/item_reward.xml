<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_reward"
    android:layout_width="match_parent"
    android:layout_height="73dp">

    <TextView
        android:id="@+id/item_reward_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/item_reward_name"/>

    <TextView
        android:id="@+id/item_reward_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_reward_name"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/item_reward_datetime"/>

    <TextView
        android:id="@+id/item_reward_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/points_small"/>
</RelativeLayout>