<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textAppearance="@style/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:layout_marginHorizontal="33dp">

<!--    fullname -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/image_view_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="11dp"
                android:background="@drawable/circle_1"
                android:src="@drawable/ic_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_fullname"
                app:layout_constraintStart_toEndOf="@+id/image_view_fullname"
                android:layout_marginStart="16dp"
                android:text="@string/profile_fullname"
                android:textAppearance="@style/profile_attribute"/>

            <EditText
                android:id="@+id/edit_text_fullname"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="100"
                android:maxLines="4"
                android:scrollHorizontally="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_view_fullname" />

            <ImageView
                android:id="@+id/image_view_edit_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_edit"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/image_view_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="11dp"
                android:background="@drawable/circle_1"
                android:src="@drawable/ic_phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_phone"
                app:layout_constraintStart_toEndOf="@+id/image_view_phone"
                android:layout_marginStart="16dp"
                android:text="@string/profile_phone"
                android:textAppearance="@style/profile_attribute"/>

            <EditText
                android:id="@+id/edit_text_phone"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/image_view_phone"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:inputType="phone|textCapSentences|textMultiLine"
                android:maxLines ="4"
                android:maxLength ="100"
                android:scrollHorizontally="false"/>

            <ImageView
                android:id="@+id/image_view_edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_edit"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/image_view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="11dp"
                android:background="@drawable/circle_1"
                android:src="@drawable/ic_email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_email"
                app:layout_constraintStart_toEndOf="@+id/image_view_email"
                android:layout_marginStart="16dp"
                android:text="@string/profile_email"
                android:textAppearance="@style/profile_attribute"/>

            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/image_view_email"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:inputType="textEmailAddress|textCapSentences|textMultiLine"
                android:maxLines="4"
                android:maxLength="100"
                android:scrollHorizontally="false"/>

            <ImageView
                android:id="@+id/image_view_edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_edit"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="11dp"
                android:background="@drawable/circle_1"
                android:src="@drawable/ic_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/edit_text_address"
                app:layout_constraintStart_toEndOf="@+id/image_view_address"
                android:layout_marginStart="16dp"
                android:text="@string/profile_address"
                android:textAppearance="@style/profile_attribute"/>

            <EditText
                android:id="@+id/edit_text_address"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/image_view_address"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines ="4"
                android:maxLength ="100"
                android:scrollHorizontally="false"/>

            <ImageView
                android:id="@+id/image_view_edit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_edit"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</RelativeLayout>